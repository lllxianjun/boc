<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.boc.system.mapper.DeviceTypesMapper">
    
    <resultMap type="DeviceTypes" id="DeviceTypesResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
    </resultMap>

    <sql id="selectDeviceTypesVo">
        select id, name from device_types
    </sql>

    <select id="selectDeviceTypesList" parameterType="DeviceTypes" resultMap="DeviceTypesResult">
        <include refid="selectDeviceTypesVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
        </where>
    </select>
    
    <select id="selectDeviceTypesById" parameterType="Long" resultMap="DeviceTypesResult">
        <include refid="selectDeviceTypesVo"/>
        where id = #{id}
    </select>

    <insert id="insertDeviceTypes" parameterType="DeviceTypes" useGeneratedKeys="true" keyProperty="id">
        insert into device_types
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
         </trim>
    </insert>

    <update id="updateDeviceTypes" parameterType="DeviceTypes">
        update device_types
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null">name = #{name},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDeviceTypesById" parameterType="Long">
        delete from device_types where id = #{id}
    </delete>

    <delete id="deleteDeviceTypesByIds" parameterType="String">
        delete from device_types where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>